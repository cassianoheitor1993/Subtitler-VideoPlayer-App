<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_card"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="@string/audio_track_selection"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="@color/text_tertiary" />

    <!-- Audio Track List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/audio_track_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        android:nestedScrollingEnabled="true" />

    <!-- No Audio Tracks Message -->
    <TextView
        android:id="@+id/no_audio_tracks_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="32dp"
        android:text="@string/no_audio_tracks"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>
