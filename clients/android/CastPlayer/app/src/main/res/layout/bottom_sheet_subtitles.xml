<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_card"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="@string/subtitles_settings"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="@color/text_tertiary" />

    <!-- Subtitle Toggle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enable Subtitles"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/subtitle_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:thumbTint="@color/text_primary"
            app:trackTint="@color/netflix_red" />

    </LinearLayout>

    <!-- Subtitle Language Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:text="@string/subtitle_language"
        android:textColor="@color/text_secondary"
        android:textSize="14sp" />

    <!-- Subtitle Language List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subtitle_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        android:nestedScrollingEnabled="true" />

    <!-- No Subtitles Message -->
    <TextView
        android:id="@+id/no_subtitles_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="32dp"
        android:text="@string/no_subtitles"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>
